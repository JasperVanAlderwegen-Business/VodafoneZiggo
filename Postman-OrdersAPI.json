  "item": [
    {
      "name": "1. Create Order - Success (Valid Email)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has orderID', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('orderID');",
              "    pm.expect(jsonData.orderID).to.be.a('number');",
              "});",
              "",
              "// Save orderID for later tests",
              "pm.collectionVariables.set('orderId', pm.response.json().orderID);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
